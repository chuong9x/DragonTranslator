<Window x:Class="Dragon_Translator.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dragon_Translator"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Loading" Height="160" Width="305" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>

        <TextBlock
    Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="68,38,56,95" FontSize="16" FontWeight="Bold" Background="White" Foreground="#FF673AB7">
  Running OCR System...
        </TextBlock>
        <ProgressBar
  Style="{StaticResource MaterialDesignCircularProgressBar}"
  Value="0"
  IsIndeterminate="True" Height="Auto" Margin="133,70,134,47" Width="Auto" />
        <Button
    Style="{StaticResource MaterialDesignFlatButton}"
    ToolTip="MaterialDesignFlatButton" Margin="105,118,104,10" Click="Button_Click">
            CANCEL
        </Button>
    </Grid>
</Window>
